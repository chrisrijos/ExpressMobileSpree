<div id="spree-header">
  <figure id="logo" class="col-md-4 col-sm-3" data-hook>
          <%= logo %>
        </figure>
  <header id="header" data-hook>
    <div class="container" id="fullcover">
      <div class="jumbotron" id="sales-jumbotron">
         <h1 id="sales-header">Express Mobile Phone</h1>
      </div>
      <div class="row">
        <%= render :partial => 'spree/shared/nav_bar' %>
      </div>
    </div>
  </header>
  <div class="container">
    <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </div>
</div>
